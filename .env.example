# 应用密钥，用于加密会话等
SECRET_KEY=your_secret_key_here

# 阿里云千问图像识别API密钥
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 和风天气API密钥
QWEATHER_API_KEY=your_qweather_api_key_here

# 和风天气API Host (新用户必填，例如：xxx.qweatherapi.com)
QWEATHER_API_HOST=

# 数据库连接URL
# 开发环境默认使用SQLite
# 生产环境建议使用PostgreSQL或MySQL
DATABASE_URL=sqlite:///fashion_ai.db

# Redis连接URL
REDIS_URL=redis://localhost:6379/0

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Flask配置
FLASK_ENV=development  # 开发环境: development, 生产环境: production
FLASK_DEBUG=True  # 开发环境: True, 生产环境: False
